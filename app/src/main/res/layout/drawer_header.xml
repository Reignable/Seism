<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="171dp"
    android:layout_width="match_parent"
    android:background="@drawable/header_background"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/drawer_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#fff"
            android:text="@string/drawer_header_name"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/drawer_header_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="@string/drawer_header_email"
            android:textSize="14sp"
            android:fontFamily="sans-serif"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_header_profilePicture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/header_profile_picture"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"/>
</RelativeLayout>